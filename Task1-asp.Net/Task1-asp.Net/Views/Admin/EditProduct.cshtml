@using Task1_asp.Net.Database.Models;
@model Product
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Edit Product</title>
</head>
<body>
    <div class="container">
        <h2>Edit Product</h2>
        <form asp-route="product-edit" asp-route-id ="@Model.Id" method="POST">
            <div class="form-group">
                <label for="productName">Product Name:</label>
                <input asp-for="Name" value="@Model.Name" type="text" class="form-control" id="productName" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="productDescription">Description:</label>
                <input asp-for="Description" value="@Model.Description" type="text" class="form-control" id="productDescription" placeholder="Enter description">
            </div>
            <div class="form-group">
                <label for="productColor">Color:</label>
                <input asp-for="Color" value="@Model.Color" type="text" class="form-control" id="productColor" placeholder="Enter color">
            </div>
            <div class="form-group">
                <label for="productSize">Size:</label>
                <input asp-for="Size" value="@Model.Size" type="text" class="form-control" id="productSize" placeholder="Enter size">
            </div>
            <div class="form-group">
                <label for="productPrice">Price:</label>
                <input asp-for="Price" value="@Model.Price" type="text" class="form-control" id="productPrice" placeholder="Enter price">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</body>
</html>