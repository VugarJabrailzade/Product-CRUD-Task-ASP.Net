@using Task1_asp.Net.Database.Models;
@using Task1_asp.Net.ViewModel;
@model NavbarUpdateViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Edit Navbar</title>
</head>
<body>
    <div class="container">
        <h2>Edit Navbar</h2>
        <form asp-route="navbar-edit" asp-route-id="@Model.Id" method="POST">
            <div class="form-group">
                <label for="Title">Title:</label>
                <input asp-for="Title" value="@Model.Title" type="text" class="form-control" id="productName" placeholder="Enter Title">
            </div>
            <div class="form-group">
                <label for="OrderCount">OrderCount:</label>
                <input asp-for="OrderCount" value="@Model.OrderCount" type="text" class="form-control" id="productDescription" placeholder="Enter Order Count">
            </div>
            <div class="form-group">
                <label for="IsHeader">IsHeader:</label>
                <input asp-for="IsHeader" value="@Model.IsHeader" type="text" class="form-control" id="productColor" placeholder="Enter is Header & Footer">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</body>
</html>