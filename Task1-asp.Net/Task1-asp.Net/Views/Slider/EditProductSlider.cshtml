@using Task1_asp.Net.Database.Models;
@model sliderProduct
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Edit Product of Slider</title>
</head>
<body>
    <div class="container">
        <h2>Edit Product of Slider</h2>
        <form asp-route="edit-slider" asp-route-id="@Model.Id" method="POST">
            <div class="form-group">
                <label for="productNameSlider">Product Name:</label>
                <input asp-for="Name" value="@Model.Name" type="text" class="form-control" id="productNameSlider" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="productDescriptionSlider">Description:</label>
                <input asp-for="Description" value="@Model.Description" type="text" class="form-control" id="productDescriptionSlider" placeholder="Enter description">
            </div>
            <div class="form-group">
                <label for="productSale">Sale percent:</label>
                <input asp-for="Sale" value="@Model.Sale" type="text" class="form-control" id="productSale" placeholder="Enter color">
            </div>
            <div class="form-group">
                <label for="productOrderCount">Order by Count:</label>
                <input asp-for="OrderCount" value="@Model.OrderCount" type="text" class="form-control" id="productOrderCount" placeholder="Enter size">
            </div>
            <div class="form-group">
                <label for="productButtonLink">Button Link:</label>
                <input asp-for="ButtonLink" value="@Model.ButtonLink" type="text" class="form-control" id="productOrderCount" placeholder="Enter product link">
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</body>
</html>