@using Task1_asp.Net.ViewModel;
@model List<SliderContent>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Products Table</title>
</head>
<body>

    <div class="container">
        <h2>Products</h2>
        <a asp-route="slider-add" class="btn btn-success">Add New Product to Slider</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Sale</th>
                    <th>Order count</th>
                    <th>Action</th>
                    
                </tr>
            </thead>
            <tbody>
                @{
                    int rowCount = 1;
                }
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@rowCount</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Sale%</td>
                        <td>@product.OrderCount</td>
                        <td>
                            <a asp-route="edit-slider" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                            <a asp-route="slider-delete" asp-route-id="@product.Id" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>

                    rowCount++;
                }
                <!-- Add more rows for additional products -->
            </tbody>
        </table>
    </div>

</body>
</html>